<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>dycg-agent</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <includes>
                <include>org.javassist:javassist</include>
                <include>redis.clients:jedis</include>
                <include>com.alibaba:fastjson</include>
                <include>org.neo4j.driver:neo4j-java-driver</include>
                <include>io.netty:netty-all</include>
                <include>org:mongodb:mongo-java-driver</include>
                <include>net.bytebuddy:byte-buddy</include>
                <include>net.bytebuddy:byte-buddy-agent</include>
                <include>org.mockito:mockito-core</include>
            </includes>

            <!--            <useProjectArtifact>true</useProjectArtifact>-->
            <!--            <scope>provided</scope>-->
        </dependencySet>

    </dependencySets>
    <fileSets>
        <fileSet>
            <includes>
                <include>gr/gousiosg/javacg/dyn/*.class</include>
                <include>/Users/ljystu/Desktop/java-callgraph/lib/*.jar</include>
            </includes>
            <directory>target/classes</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
